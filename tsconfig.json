{
  "compilerOptions": {
    "module": "ESNext",
    "declaration": false,
    "strict": true,
    "baseUrl": "./",
    "outDir": "dist",
    "removeComments": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/**/*.test.ts"
  ]
}
